extends base

block title
  title Autoworms - Home

block header
  #header
    h1 Autoworms

block bodyContent
  #content(ng-app='autoworms')
    .index(ng-controller='game')
      h3 Orientation
      p
        input(
          type="radio",
          name="hexOrientation",
          id="hexOrientationNormal",
          value="0",
          ng-model='orientation',
          ng-change="changeOrientation();",
          checked="true")
        label(for="hexOrientationNormal") Normal
        input(
          type="radio",
          name="hexOrientation",
          id="hexOrientationRotated",
          value="1",
          ng-model='orientation',
          ng-change="changeOrientation();")
        label(for="hexOrientationRotated") Rotated
      h3 Hex Based on Side Length
      p Side Length (z):
        input(type="text", id="sideLength", value="50.0")
      p
        | Ratio of Width:Height (4:3, r = 1.333), (2/&radic;
        span(style="text-decoration:overline;") 3
        | , r = 1.1547...)
        input(type="text", id="whRatio", value="1.1547005383792515290182975610039")
      p
        input(type="button", ng-click="getHexGridZR()", value="Draw Hex Grid by Side Length Z")
      h3
        Hex Based on Width and Height
        | Width:
        input(type="text", id="hexWidth", value="100.0")
      p
        | Height:
        input(type="text", id="hexHeight", value="86.60254037844388")
      p
        input(type="button", ng-click="getHexGridWH()", value="Draw Hex Grid by Width and Height")
      #hexStatus
      canvas(id="hexCanvas", width="800", height="600", style="width:800px;height:600px")